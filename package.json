{
  "name": "vue-block-system",
  "version": "1.1.13",
  "description": "Easily create block based websites!",
  "main": "./index.js",
  "types": "./index.d.ts",
  "scripts": {
    "prepublishOnly": "npm-run-all -s validate build",
    "validate": "npm-run-all -p lint test",
    "dev": "npm-run-all -p dev:*",
    "dev:babel": "babel ./src -x \".ts\" --out-dir ./ --watch",
    "dev:ts": "tsc --noEmit --allowJs --watch",
    "build": "npm-run-all -s clean build:*",
    "build:babel": "babel ./src -x \".ts\" -x \".js\" --out-dir ./",
    "build:ts": "tsc -p ./tsconfig.build.json",
    "test": "cross-env NODE_ENV=test nyc --all mocha \"./test/**/*.spec.{ts,js}\"",
    "test:dev": "mocha -w --watch-extensions ts,js \"./test/**/*.spec.{ts,js}\"",
    "clean": "npm-run-all clean:*",
    "clean:test": "shx rm -rf coverage .nyc_output",
    "clean:npm": "shx rm -rf lib tmp index.js",
    "doc": "npm-run-all -p doc:*",
    "doc:typedoc": "typedoc src/ --out docs/ --mode file --exclude \"**/index.ts\"",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint src --ext .js --cache",
    "lint:ts": "tslint src/**/*.ts -c tslint.json -p tsconfig.json -t verbose",
    "prettify": "prettier --write \"src/**/*.{js,ts,json}\"",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "linters": {
      "src/**/*.{js,ts,json}": [
        "prettier --write",
        "git add"
      ],
      "src/**/*.js": [
        "npm run lint:js"
      ],
      "src/**/*.ts": [
        "npm run lint:ts"
      ]
    }
  },
  "pre-push": [
    "validate"
  ],
  "author": "Lars van Braam <larsvanbraam@gmail.com> (larsvanbraam)",
  "homepage": "https://github.com/larsvanbraam/vue-block-system",
  "license": "MIT",
  "keywords": [
    "seng",
    "mediamonks",
    "vue",
    "block-system",
    "transition"
  ],
  "bugs": {
    "url": "https://github.com/larsvanbraam/vue-block-system/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/larsvanbraam/vue-block-system.git"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.35",
    "@babel/core": "^7.0.0-beta.35",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.35",
    "@babel/preset-env": "^7.0.0-beta.35",
    "@babel/preset-stage-3": "^7.0.0-beta.35",
    "@babel/preset-typescript": "^7.0.0-beta.35",
    "@babel/register": "^7.0.0-beta.35",
    "@types/chai": "^4.0.10",
    "@types/mocha": "^2.2.44",
    "@types/sinon": "^4.1.2",
    "@types/sinon-chai": "^2.7.29",
    "babel-eslint": "^8.0.3",
    "babel-plugin-istanbul": "^4.1.5",
    "chai": "^4.1.2",
    "coveralls": "^2.11.6",
    "cross-env": "^5.1.1",
    "eslint": "^4.13.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-import-resolver-typescript": "^1.0.2",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.4.0",
    "husky": "^0.14.3",
    "jsdom": "^11.5.1",
    "jsdom-global": "^3.0.2",
    "lint-staged": "^6.0.0",
    "mocha": "^4.0.1",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.3.0",
    "prettier": "^1.9.2",
    "shx": "^0.2.2",
    "sinon": "^4.1.3",
    "sinon-chai": "^2.14.0",
    "tslint": "^5.8.0",
    "tslint-config-airbnb": "^5.4.2",
    "tslint-config-prettier": "^1.6.0",
    "typedoc": "^0.9.0",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0-beta.35",
    "axios": "^0.18.0",
    "confirm-simple": "^1.0.3",
    "gsap": "^3.6.0",
    "lodash": "^4.17.5",
    "node-run-cmd": "^1.0.1",
    "rimraf": "^2.6.2",
    "scroll-tracker-component-manager": "^1.1.2",
    "seng-event": "^1.2.3",
    "vue": "^2.5.16",
    "vue-scrollto": "^2.11.0",
    "vue-transition-component": "^2.0.3",
    "vue-types": "^1.2.2",
    "vuex": "^3.0.1"
  }
}
